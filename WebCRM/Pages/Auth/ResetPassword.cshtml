@page
@model WebCRM.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "_LoginLayout";
}

<form method="post"  class="form-signin">
    <div asp-validation-summary="ModelOnly"></div>
  
    <div class="card card-login card-hidden">
        <div class="card-header card-header-info text-center">
            <h4 class="card-title">
                <img src="~/images/branding/Logo-DMS-white.svg" title="DMS" alt="DMS" class="login-logo" style="width:10em" />
            </h4>
            <div class="social-line">
            </div>
        </div>
        <div class="card-body ">
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">face</i>
                        </span>
                    </div>
                    <input asp-for="UserName" readonly class="form-control" placeholder="Nombre de usuario" />
                </div>
            </span>
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">lock_open</i>
                        </span>
                    </div>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" autofocus />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </span>
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">lock</i>
                        </span>
                    </div>
                    <input asp-for="Confirmation" type="password" class="form-control" placeholder="Confirmación" />
                    <span asp-validation-for="Confirmation" class="text-danger"></span>
                </div>
            </span>

        </div>
        <div class="card-footer ">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12"><button class="btn btn-lg btn-info btn-block" type="submit">Reestablecer clave</button></div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

