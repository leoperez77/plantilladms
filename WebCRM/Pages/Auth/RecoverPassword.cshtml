@page
@model WebCRM.Pages.Auth.RecoverPasswordModel
@{
    ViewData["Title"] = "RecoverPassword";
    Layout = "_LoginLayout";
}

<form method="post" class="form-signin">
    <div class="logo-sign">
        <partial name="_CompanyLogoSmall" />
    </div>
    <p>
        Solución <strong>CRM</strong><br /> para gestión de comercio automotriz.
    </p>
    <div class="card card-login card-hidden">
        @*<div class="card-header card-header-info text-center">
                <h4 class="card-title">
                    <img src="~/images/branding/Logo-DMS-white.svg" title="DMS" alt="DMS" class="login-logo" style="width:10em" />
                </h4>
                <div class="social-line">
                </div>
            </div>*@
        <div class="card-body ">
            <h3 class="login-titles">Recuperar Contraseña</h3>
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">commute</i>
                        </span>
                    </div>
                    <input class="form-control" id="username" asp-for="Identificador" placeholder="Cliente" required autofocus />
                </div>
            </span>

            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">face</i>
                        </span>
                    </div>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Nombre de usuario" required autofocus />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </span>
            <span class="bmd-form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">mail</i>
                        </span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </span>

        </div>
        <div class="card-footer ">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </div>
                </div>
                @if (ModelState.ErrorCount > 0)
                {
                    <div class="row">
                        <div class="col-md-12">

                            <div class="alert alert-danger" role="alert">
                                @Html.ValidationMessage("LoginError")
                            </div>

                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-md-12"><button class="btn btn-md btn-block blue-btn" type="submit">Recuperar clave</button></div>
                </div>
                <div class="row">
                    <div class="col-md-12"><a href="./login" class="btn btn-sm btn-block btn-link btn-github">Volver al login</a></div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
